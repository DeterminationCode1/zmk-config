/*                KEY POSITIONS

  ╭─────────────────────╮ ╭─────────────────────╮
  │ LT4 LT3 LT2 LT1 LT0 │ │ RT0 RT1 RT2 RT3 RT4 │
  │ LM4 LM3 LM2 LM1 LM0 │ │ RM0 RM1 RM2 RM3 RM4 │
  │ LB4 LB3 LB2 LB1 LB0 │ │ RB0 RB1 RB2 RB3 RB4 │
  ╰───────╮ LH2 LH1 LH0 │ │ RH0 RH1 RH2 ╭───────╯
          ╰─────────────╯ ╰─────────────╯ */

// must be same for all combos to avoid #986, possibly related to #905
#define COMBO_TERM 30

/* Punctuation (horizontal left hand) */
ZMK_COMBO(num,   &tog NUM,      LT3 LT1, DEF NUM)
ZMK_COMBO(all,   &kp LC(A),     LT3 LT2, DEF NUM)
ZMK_COMBO(app,   &kp LG(SPACE), LT2 LT1, DEF NUM)

ZMK_COMBO(excl,  &kp EXCL,      LM3 LM2, DEF NUM)
ZMK_COMBO(qmark, &kp QMARK,     LM2 LM1, DEF NUM)

ZMK_COMBO(cut,   &kp LC(X),     LB3 LB1, DEF NUM)
ZMK_COMBO(copy,  &kp LC(INS),   LB3 LB2, DEF NUM)
ZMK_COMBO(paste, &kp LS(INS),   LB2 LB1, DEF NUM)

/* Brackets (horizontal right hand) */
ZMK_COMBO(lbrc,  &kp LBRC,      RT1 RT2, DEF NUM)
ZMK_COMBO(rbrc,  &kp RBRC,      RT2 RT3, DEF NUM)
ZMK_COMBO(lpar,  &kp LPAR,      RM1 RM2, DEF NUM)
ZMK_COMBO(rpar,  &kp RPAR,      RM2 RM3, DEF NUM)
ZMK_COMBO(lbrk,  &kp LBKT,      RB1 RB2, DEF NUM)
ZMK_COMBO(rbrk,  &kp RBKT,      RB2 RB3, DEF NUM)

/* Other symbols (vertical combos) */
ZMK_COMBO(at,    &kp AT,        LT3 LM3, DEF NUM)
ZMK_COMBO(hash,  &kp HASH,      LT2 LM2, DEF NUM)
ZMK_COMBO(dllr,  &kp DLLR,      LT1 LM1, DEF NUM)
ZMK_COMBO(prcnt, &kp PRCNT,     LT0 LM0, DEF NUM)

ZMK_COMBO(caret, &kp CARET,     RT0 RM0, DEF NUM)
ZMK_COMBO(plus,  &kp PLUS,      RT1 RM1, DEF NUM)
ZMK_COMBO(star,  &kp STAR,      RT2 RM2, DEF NUM)
ZMK_COMBO(amps,  &kp AMPS,      RT3 RM3, DEF NUM)

ZMK_COMBO(grave, &kp GRAVE,     LM3 LB3, DEF NUM)
ZMK_COMBO(bslh,  &kp BSLH,      LM2 LB2, DEF NUM)
ZMK_COMBO(tilde, &kp TILDE,     LM1 LB1, DEF NUM)
ZMK_COMBO(equal, &kp EQUAL,     LM0 LB0, DEF NUM)

ZMK_COMBO(under, &kp UNDER,     RM0 RB0, DEF NUM)
ZMK_COMBO(minus, &kp MINUS,     RM1 RB1, DEF NUM)
ZMK_COMBO(fslh,  &kp FSLH,      RM2 RB2, DEF NUM)
ZMK_COMBO(pipe,  &kp PIPE,      RM3 RB3, DEF NUM)

